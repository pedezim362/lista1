# =============================================================================
# FileManager Environment Variables
# =============================================================================
# Add these variables to your .env file to configure the FileManager package.
# =============================================================================

# -----------------------------------------------------------------------------
# General FileManager Settings
# -----------------------------------------------------------------------------

# The default filesystem disk for file storage
# Options: local, public, minio, s3, spaces
FILESYSTEM_DISK=minio

# FileManager specific disk (defaults to FILESYSTEM_DISK if not set)
FILEMANAGER_DISK=minio

# Root directory within the disk for file storage
FILEMANAGER_ROOT=

# Upload directory within the disk
FILEMANAGER_UPLOAD_DIR=uploads

# Show hidden files (starting with .)
FILEMANAGER_SHOW_HIDDEN=false

# Signed URL expiration time in minutes (for S3/MinIO)
FILEMANAGER_URL_EXPIRATION=60

# Enable/disable authorization checks
FILEMANAGER_AUTH_ENABLED=true

# -----------------------------------------------------------------------------
# MinIO Configuration (Local S3-Compatible Storage)
# -----------------------------------------------------------------------------
# Recommended for development - matches production S3 behavior
#
# Docker setup:
# docker run -p 9000:9000 -p 9001:9001 \
#   -e MINIO_ROOT_USER=minioadmin \
#   -e MINIO_ROOT_PASSWORD=minioadmin \
#   minio/minio server /data --console-address ":9001"
# -----------------------------------------------------------------------------

MINIO_ACCESS_KEY_ID=minioadmin
MINIO_SECRET_ACCESS_KEY=minioadmin
MINIO_DEFAULT_REGION=us-east-1
MINIO_BUCKET=uploads
MINIO_ENDPOINT=http://localhost:9000
MINIO_USE_PATH_STYLE_ENDPOINT=true
# MINIO_URL=

